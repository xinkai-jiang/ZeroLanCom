{
    // Use clang-format as the default formatter for C/C++
    "[cpp]": {
        "editor.defaultFormatter": "xaver.clang-format"
    },
    "[c]": {
        "editor.defaultFormatter": "xaver.clang-format"
    },
    // Explicit clang-format executable (optional but recommended)
    "clang-format.executable": "clang-format",
    // Fallback style if .clang-format is missing
    "clang-format.fallbackStyle": "LLVM"
}